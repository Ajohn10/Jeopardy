<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Jeopardy.Controls.SimplePopup">
    <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="10">
        <Label 
            Text="{Binding Path=Message}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Close" VerticalOptions="End" Clicked="Button_Clicked" Margin="0, 20, 0, 0" />
    </VerticalStackLayout>
</toolkit:Popup>
