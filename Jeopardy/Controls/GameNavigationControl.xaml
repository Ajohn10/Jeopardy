<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Jeopardy"
             x:Class="Jeopardy.Controls.GameNavigationControl"
             x:DataType="local:Game">
    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
        <Border HorizontalOptions="FillAndExpand">
            <Label 
            Padding="15,0,15,0"
            Text="{Binding Path=DisplayName}"
            VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
        </Border>
        <Button Text="Play" CornerRadius="0" Clicked="Play_Clicked" HorizontalOptions="End"></Button>
    </StackLayout>
</ContentView>
